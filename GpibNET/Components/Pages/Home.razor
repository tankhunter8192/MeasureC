@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


<h4>TextBox Example</h4>

<div class="mb-3">
    <label for="inputText" class="form-label">Enter Text:</label>
    <InputText id="inputText" @bind-Value="InputText" class="form-control" />
</div>

<button class="btn btn-primary" @onclick="SubmitText">Submit</button>

@if (!string.IsNullOrEmpty(SubmittedText))
{
    <div class="mt-3">
        <h4>Submitted Text:</h4>
        <p>@SubmittedText</p>
    </div>
}

@code {
    private string InputText { get; set; } = string.Empty;
    private string? SubmittedText { get; set; }

    private void SubmitText()
    {
        SubmittedText = InputText;
    }
}